<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_index__fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zdh.alphathink.imh.fragment.Index_Fragment">
    <RelativeLayout
        android:background="@color/index_content_color"
        android:id="@+id/index_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:background="@color/index_background_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="73dp">
        <LinearLayout
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:contentDescription="@string/bottom_bar_news"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_healthy_news_normal"/>
            <TextView
                android:textColor="@color/index_text_normal"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_bar_news"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:contentDescription="@string/bottom_bar_control"
            android:background="@null"
            android:src="@drawable/index_medical_box_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/index_text_normal"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_bar_control"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:contentDescription="@string/bottom_bar_chatting"
            android:background="@null"
            android:src="@drawable/index_doctor_consult_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/index_text_normal"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_bar_chatting"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:contentDescription="@string/bottom_bar_personal"
            android:background="@null"
            android:src="@drawable/index_personal_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/index_text_normal"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bottom_bar_personal"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
