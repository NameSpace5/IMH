<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_box"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.zdh.alphathink.imh.Control.Box.Box">

        <RelativeLayout
            android:id="@+id/box_title"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <FrameLayout
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true">
             <ImageButton
              android:clickable="false"
              android:layout_gravity="center"
              android:background="@null"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/btn_just_back"/>
            </FrameLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/index_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/index_text_normal"
            android:text="设备管理"
            android:textStyle="bold" />
            <FrameLayout
                android:id="@+id/box_add"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="60dp">
            <ImageButton
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ad"
                />
            </FrameLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/box_background_nowifi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/box_background_nowifi"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:text="当前还未连接到IMH管家WIFI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView4" />

            <TextView
                android:textSize="20sp"
                android:text="请重新尝试连接！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView8" />
                <Button
                    android:id="@+id/box_btn_connect_wifi"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连接WIFI"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
